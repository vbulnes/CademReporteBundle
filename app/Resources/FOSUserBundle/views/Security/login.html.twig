    <input type="text" id="username" name="_username" class="input-block-level text-center" placeholder="Email" required="required" />

    <!-- <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label> -->
    
        <input type="password" id="password" name="_password" class="text-center" required="required" placeholder="ContraseÃ±a" />
    
